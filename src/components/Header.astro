---
import { ViewTransitions } from "astro:transitions";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="bg-pink-300 fixed top-0 z-50 w-full">
  <div
    class="mx-auto flex h-16 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8"
  >
    <a class="block text-teal-600" href="/">
      <span class="sr-only">Home</span>
      <img class="h-12 w-15" src="/ISOLOGO1.png" />
    </a>

    <div class="flex flex-1 items-center justify-end md:justify-between">
      <nav aria-label="Global" class="hidden md:block navbar">
        <ul class="flex items-center gap-6 text-sm">
          <li>
            <a
              class={currentPath.includes("general") ? "active" : "link"}
              href="/general"
            >
              Tratamientos Generales
            </a>
          </li>

          <li>
            <a
              class={currentPath === "depilacion" ? "active" : "link"}
              href="/depilacion"
            >
              Depilaciones
            </a>
          </li>

          <li>
            <a
              class={currentPath === "reductores" ? "active" : "link"}
              href="/reductores"
            >
              Tratamientos Reductores
            </a>
          </li>

          <li>
            <a
              class={currentPath === "masajes" ? "active" : "link"}
              href="/masajes"
            >
              Masajes
            </a>
          </li>
          <li>
            <a
              class={currentPath === "contacto" ? "active" : "link"}
              href="/contacto"
            >
              Contactanos
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
<style>
  .navbar a.active {
    color: #fff;
    font-weight: 600;
  }

  .link{
    @apply text-gray-500 transition hover:text-gray-500/75;
  }
</style>